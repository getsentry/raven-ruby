gem "jdbc-sqlite3", platform: :jruby
gem "sqlite3", platform: :ruby

gem "rails", "~> #{rails_version}"
gem "rspec-rails", "~> 4.0"
gem "codecov"

gem "rake", "~> 12.0"
gem "rspec", "~> 3.0"

gem "sidekiq"

gem "sentry-ruby", path: "../sentry-ruby"

gem "pry"

gem "benchmark-ips"
gem "benchmark_driver"
gem "benchmark-ipsa"
gem "benchmark-memory"
